.header{
  height: 40rpx;
  display: flex;
  margin-top: 80rpx;
  align-items: center;
}
.header image{
  height: 40rpx;
  width: 22rpx;
  padding: 20rpx 60rpx 20rpx 40rpx;
  /* margin-left: 40rpx; */
}
.van-nav-bar {
  background-color: #3163E8 !important;
}

.van-nav-bar__title {
  font-family: PingFangSC-Regular !important;
  font-size: 18px !important;
  color: #FFFFFF !important;
  letter-spacing: 0 !important;
}

.van-nav-bar__text {
  font-family: PingFangSC-Medium !important;
  font-size: 14px !important;
  color: #FFFFFF !important;
  letter-spacing: 0 !important;
}
.van-icon-arrow-left {
  width: 20rpx!important;
  height: 40rpx!important;
  color: #fff!important;
}
.van-icon{
  width: 20rpx!important;
  height: 40rpx!important;
  font-size: 50rpx!important;
}
.top-title{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.editPas_header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width:100%;
  height:60rpx;
}
.editPas_header .back_img {
  width: 21.4rpx;
  height: 40rpx;
}
.editPas_header .back_img image {
  width: 100%;
  height:100%;
}
.editPas_header .edit_pas {
  font-family: PingFang-SC-Regular;
  font-size: 36rpx;
  color: #333333;
  letter-spacing: 0;
}
.editPas_header .edit_confirm {
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #3163E8;
  letter-spacing: 0;
}
.editPas_body {
  margin-top: 108rpx;
}
.editPas_body .editPas_body_item{
  margin-bottom: 20rpx;
}
.editPas_body .editPas_body_item input{
  font-size: 28rpx ;
  height: 80rpx;
  line-height: 80rpx;
}
.editPas_body .separator {
  width:90%;
  height:2rpx;
  border-bottom: 2rpx solid #CCCFD6;
  margin: 0 auto;
  margin-top: 16rpx;
  box-sizing: border-box;
}
.editPas_body input {
  padding-left: 46rpx;
  height: 60rpx;
}
.btn {
  width: 672rpx;
  height: 96rpx;
  opacity: 0.3;
  background: #3163E8;
  border-radius: 8rpx;
  font-family: PingFang-SC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 96rpx auto;
}
.btn_active{
  opacity: 1;
}